<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/custom_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_card_padding"
            android:text="@string/recovered_title"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/home_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/custom_card_numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/recoveredColor"
            android:textSize="@dimen/cases_numbers_size"
            app:layout_constraintBottom_toTopOf="@+id/custom_card_percentage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="342352" />

        <TextView
            android:id="@+id/custom_card_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/increase_percentage_text_size"
            android:layout_marginBottom="@dimen/text_card_padding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@string/percentage_example" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>